{
    "name": "charles/advanced-maker-crud-bundle",
    "type": "symfony-bundle",
    "license": "MIT",
    "keywords": ["symfony crud", "crud generator"],
    "description": "This bundle is extension to `symfony/maker-bundle`. It allows you to create advanced CRUD",
    "authors": [
        {
            "name": "Jose Carlos",
            "homepage": "https://www.clicksolution.es"
        }
    ],
    "require": {
        "php": "^7.0.8",
        "symfony/config": "^3.4|^4.0",
        "symfony/console": "^3.4|^4.0",
        "symfony/dependency-injection": "^3.4|^4.0",
        "symfony/http-kernel": "^3.4|^4.0",
        "symfony/maker-bundle": "<1.2"

    },
    "config": {
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": { 
            "Charles\\AdvancedCrudMakerBundle\\": "src/" 
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
